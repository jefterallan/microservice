@model Shared.ViewModels.ProductModel
@{
    var errorLogs = ViewData["ErrorLogs"] as string;
}
<h2>Delete Product</h2>
<br />
@if (!string.IsNullOrEmpty(errorLogs))
{
    <div class="alert alert-danger" role="alert">
        @errorLogs
    </div>
}
<p>Are you sure you want to delete the product <strong>@Model.Name</strong>?</p>
<br />
<form method="post" action="@Url.Action("DeleteProduct")">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
